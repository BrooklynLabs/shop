
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<title>Admin</title>

	<%- include('../partials/header')%>

</head>
<body>
	<section id="container">
	<%- include('../partials/topbar')%>
	<%- include('../partials/sidebar')%>
	<section id="main-content">
	<br /><br> <br>
		<h2>Edit Product</h2>
		<form id="productform" action="/api/v1/product/edit" method="POST" class="form-horizontal" enctype='multipart/form-data' role="form">
			<div class="form-group row">
				<label for="prod_name" class="col-sm-offset-1 col-sm-2 form-control-label"> Name</label>
				<div class="col-sm-6">
					<input id="prod_name" class="form-control" type="Text" name="prod_name" placeholder="Name" value="<%= prod_name %>"required></input>
				</div>
			</div>
			<div class="form-group row">
				<label for="prod_category" class="col-sm-offset-1 col-sm-2 form-control-label">Category</label>
				<div class="col-sm-6">
					<select id="prod_category" class="form-control" name="prod_category" form="productform" required>
						<option value="electronics">Electronics</option>
						<option value="home">Home</option>
					</select>
				</div>
			</div>
			<div class="form-group row">
				<label for="description" class="col-sm-offset-1 col-sm-2 form-control-label">Description</label>
				<div class="col-sm-6">
					<textarea class="form-control" id="description" rows="5" form="productform" name="description" placeholder="Product Description" required><%= description %></textarea>
				</div>
			</div>
			<div class="form-group row">
				<label for="images" class="col-sm-offset-1 col-sm-2 form-control-label">Images</label>
				<div class="col-sm-6">
					<input id="images" class="form-control" type="file" name="images" multiple></input>
				</div>
			</div>
			<div class="form-group row">
				<label for="prod_mrp" class="col-sm-offset-1 col-sm-2 form-control-label">MRP of Product</label>
				<div class="col-sm-6">
					<div class="input-group">
					<div class="input-group-addon"><i class="fa fa-inr"></i></div>
					<input id="prod_mrp" class="form-control" type="number" name="prod_mrp" value="<%= prod_mrp %>"placeholder="Amount" required></input>
					</div>

				</div>
			</div>
			<input type="hidden" name="prod_id" value="<%= prod_id %>"></input>
			<div class="form-group row">
				<div class="col-sm-offset-3 col-sm-6">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</div>
		</form>
	</section>
	</section>
	
	<%- include('../partials/footer')%>
</body>
</html>