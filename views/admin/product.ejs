<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Admin</title>

	<%- include('../partials/header')%>

</head>
<body>
	<section id="container">
	<%- include('../partials/topbar')%>
	<%- include('../partials/sidebar')%>
	<br><br> <br>
	<section id="main-content">
	<h2>Product List</h2>
	<div class="row">
		
		<% for (var i=0; i<products.length ; i++){ %>
			<div class="col-sm-4">
			<div class="card card-block">
				<h4 class="card-title"><%= products[i].prod_name%></h4>
				<h6 class="card-subtitle text-muted"><%= products[i].prod_category %></h6>
				<p><%= products[i].description %></p>
				<a href="/product/edit/<%= products[i].prod_id%>" class="btn btn-primary">Edit</a>
			</div>
			</div>
		<%}%>
		
	</div>
	</section>
	</section>

	<%- include('../partials/footer')%>

</body>
</html>